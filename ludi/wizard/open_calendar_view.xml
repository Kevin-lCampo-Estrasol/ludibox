<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ludi_view_calendar_form" model="ir.ui.view">
            <field name="name">ludi.calendar.view.form</field>
            <field name="model">ludi.calendar.view</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="purchase_id" invisible="1"/>
                            <field name="partner_id" invisible="1"/>
                            <group>
                                <field name="date_planned"/>
                            </group>
                        </group>
                        <field name="lines" force_save="1" readonly="1">
                            <tree>
                                <field name="name"/>
                                <field name="calendar_id" invisible="1"/>
                                <field name="date_begin"/>
                                <field name="date_end"/>
                            </tree>
                        </field>
                    </sheet>
                    <footer>   
                        <button name="apply_date_on_purchase" type="object" string="Aplicar fecha en compra" class="btn-primary"/>
                        <button name="cancel" type="object" string="Cancelar" class="btn-primary"/>
                    </footer>   
                </form>
            </field>
        </record>
    </data>
</odoo>