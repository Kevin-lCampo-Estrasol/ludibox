<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="free_products_view_form" model="ir.ui.view">
            <field name="name">ludi.free.form</field>
            <field name="model">ludi.free</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <field name="purchase_id" invisible="1"/>
                                <field name="partner_id" invisible="1"/>
                                <field name="amount_purchase" force_save="1" readonly="1"   />
                            </group>
                        </group>
                        
                        <field name="products_added" context="{'default_partner_id':partner_id}">
                            <tree editable="bottom">
                                <field name="free_id"/>
                                <field name="partner_id"/>
                                <field name="product_id"/>
                                <field name="product_qty"/>
                                <field name="product_uom"/>
                                <field name="price_unit"/>
                                <field name="total"/>
                            </tree>
                        </field>
                        <group class="oe_subtotal_footer oe_right">
					        <field name="amount_left"  class="oe_subtotal_footer_separator" />
                        </group>
                    </sheet>
                    <footer>
                        <button name="add_productos_to_purchase"  type="object" string="Agregar productos" class="btn-primary" />
                        <button name="cancel" type="object" string="Cancelar" class="btn-primary" />
                    </footer>
                </form>
            </field>
        </record>
    
    </data>
</odoo>