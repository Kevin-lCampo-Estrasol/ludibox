<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="pos_config_inher_ludi_form">
            <field name="name">pos.config.form</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='inventory_location']" position="inside">
                    <div class="col-6 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="inventory_pl_ids" string="Planificación de Inventario"/>
                            <div class="text-muted">
                                Campo utilizado para guardar las fechas de planificación de invetarios
                            </div>
                            <div class="content-group mt16">
                                <field name="inventory_pl_ids">
                                    <tree editable="bottom">
                                        <field name="date_plan" attrs="{'readonly': [('authorize_by', '=', True)]}"/> 
                                        <field name="authorize" groups="point_of_sale.group_pos_manager" attrs="{'readonly': [('authorize_by', '=', True)]}"/>   
                                        <field name="pos_config_id" invisible="1"/>
                                        <field name="authorize_by" force_save="1" readonly="1" groups="point_of_sale.group_pos_manager"/>
                                    </tree>
                                </field>    
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
       
    </data>
</odoo>