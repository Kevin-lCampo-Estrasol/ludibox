<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="ludi_res_users_inherit_supplier_form" model="ir.ui.view">
            <field name="name">res.users.form.inherit.ludi</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="replace">
                    <field name="partner_id" readonly="0" required="0" groups="base.group_no_one" attrs="{'invisible': [('id', '=', False)]}"/>
                </xpath>
            </field>
        </record>

        <record id="res_users_modify_ludi_form" model="ir.ui.view">
            <field name="name">res.users.preferences.form.inherith</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form_simple_modif"/>
            <field name="arch" type="xml">
                <xpath expr="//page[1]" position="after">
                    <page string="Wihslist">
                        <field name="wishlist_ids" mode="kanban">
                            <kanban>
                                <field name="id"/>
                                <field name="name"/>
                                <field name="qty_available"/>
                                <field name="image_1920"/>
                                <templates>
                                    <t t-name="kanban-box">
                                        <div class="oe_kanban_global_click">
                                            <div class="o_kanban_image">
                                                <img t-att-src="kanban_image('product.product', 'image_1920', record.id.raw_value)" alt="image" class="o_image_64_contain"/>
                                            </div>
                                        
                                            <div class="oe_kanban_details">
                                                <strong><field name="name"/></strong>
                                                <div>
                                                    <field name="qty_available"/>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </templates>
                            </kanban>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>