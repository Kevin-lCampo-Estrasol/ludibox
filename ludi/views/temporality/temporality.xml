<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="temporality_view_form" model="ir.ui.view">
            <field name="name">ludi.temporality.form</field>
            <field name="model">ludi.product.temporality</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <group string="Begin">
                                <field name="day_begin"/>
                                <field name="month_begin"/>
                            </group>
                            <group string="End">
                                <field name="day_end"/>
                                <field name="month_end"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>